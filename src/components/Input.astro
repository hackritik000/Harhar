---
export const prerender = false;
const {
  id,
  name,
  className,
  placeholder,
  value = "",
  type = "text",
  pattern = false,
  inputError,
} = Astro.props;
---

<div>
  <label class="" for={id}>{name}</label>
  <input
    type={type}
    id={id}
    name={name}
    value={value}
    transition:name={name}
    transition:persist
    class={`${className} `}
    placeholder={placeholder}
    pattern={pattern}
  />

  <div>{inputError && inputError[name]?.[0]}</div>

</div>
